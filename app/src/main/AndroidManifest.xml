<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="yohan.fcb.bloodtesttracker">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".SplashActivity"
                android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".MainActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".SignInActivity"
                android:label="Start counting blood sugar">
        </activity>
        <activity
                android:name=".BloodSugarActivity"
                android:label="@string/title_activity_blood_sugar"
                android:parentActivityName=".MainActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="yohan.fcb.bloodtesttracker.MainActivity"/>
        </activity>
        <activity
                android:name=".BloodPressureActivity"
                android:label="@string/title_activity_blood_pressure"
                android:parentActivityName=".MainActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="yohan.fcb.bloodtesttracker.MainActivity"/>
        </activity>
        <activity
                android:name=".TotalBloodCount"
                android:label="@string/title_activity_total_blood_count"
                android:parentActivityName=".MainActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="yohan.fcb.bloodtesttracker.MainActivity"/>
        </activity>
        <activity
                android:name=".RedBloodCount"
                android:label="@string/title_activity_red_blood_count"
                android:parentActivityName=".MainActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="yohan.fcb.bloodtesttracker.MainActivity"/>
        </activity>
        <activity
                android:name=".VitaminDCount"
                android:label="@string/title_activity_vitamin_dcount"
                android:parentActivityName=".MainActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="yohan.fcb.bloodtesttracker.MainActivity"/>
        </activity>

    </application>

</manifest>